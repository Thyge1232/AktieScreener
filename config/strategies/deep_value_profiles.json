{
  "global": {
    "cache_dir": "./deep_value_cache",
    "cache_ttl": 86400,
    "num_processes": 4,
    "profiles_to_run": ["netnet", "asset_based", "special_situations"]
  },
  "profiles": {
    "netnet": {
      "strategy_type": "deep_value",
      "name": "NET-NET VALUE - Extreme Underprissede Aktier",
      "parameters": {
        "min_market_cap": 50000000,
        "max_market_cap": 2000000000,
        "max_pe_ratio": 10.0,
        "max_pb_ratio": 0.65,
        "max_ev_ebitda": 5.0,
        "min_cash_to_market_cap": 0.5,
        "max_debt_to_equity": 0.3,
        "min_current_ratio": 2.0,
        "max_price_to_nca": 0.75,
        "min_positive_eps_years": 3
      },
      "description": "Aktier handlet UNDER netto omsætningsaktiver (Net-Net)",
      "required_metrics": [
        "pe_ratio", "pb_ratio", "ev_ebitda", "cash_to_market_cap",
        "debt_to_equity", "current_ratio", "price_to_nca",
        "positive_eps_years"
      ]
    },
    "asset_based": {
      "strategy_type": "deep_value",
      "name": "AKTIVBASERET VALUE - Underprissede Aktiver",
      "parameters": {
        "min_market_cap": 100000000,
        "max_market_cap": 5000000000,
        "max_pe_ratio": 12.0,
        "max_pb_ratio": 0.8,
        "max_ev_ebitda": 7.0,
        "min_cash_to_market_cap": 0.3,
        "max_debt_to_equity": 0.5,
        "min_current_ratio": 1.5,
        "min_price_to_book": 0.6,
        "min_price_to_tangible_book": 0.7
      },
      "description": "Aktier handlet UNDER deres reelle aktiver",
      "required_metrics": [
        "pe_ratio", "pb_ratio", "ev_ebitda", "cash_to_market_cap",
        "debt_to_equity", "current_ratio", "price_to_book",
        "price_to_tangible_book"
      ]
    },
    "special_situations": {
      "strategy_type": "deep_value",
      "name": "SÆRLIGE SITUATIONER - Turnaround & Special Situations",
      "parameters": {
        "min_market_cap": 200000000,
        "max_market_cap": 10000000000,
        "max_pe_ratio": 15.0,
        "max_pb_ratio": 1.0,
        "max_ev_ebitda": 8.0,
        "min_dividend_yield": 0.0,
        "max_debt_to_equity": 0.8,
        "min_interest_coverage": 1.5,
        "max_price_to_nca": 1.0,
        "min_recent_eps_growth": -0.1,
        "max_recent_eps_growth": 0.2,
        "turnaround_indicators": ["new_management", "asset_sales", "debt_reduction"]
      },
      "description": "Aktier i særlige situationer med potentiale for turnaround",
      "required_metrics": [
        "pe_ratio", "pb_ratio", "ev_ebitda", "dividend_yield",
        "debt_to_equity", "interest_coverage", "price_to_nca",
        "recent_eps_growth", "news_sentiment"
      ]
    }
  }
}